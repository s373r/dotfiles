{
    // 
    // Visualization
    // 
    "window.commandCenter": true,
    "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-dark",
    "workbench.colorTheme": "Darcula Solid",
    "workbench.preferredDarkColorTheme": "JetBrains Darcula Theme",
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "editor.formatOnSave": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.semanticTokenColorCustomizations": {
        "[Darcula Solid]": {
            "rules": {
                "*.mutable": {
                    "underline": true,
                }
            },
        }
    },
    // 
    // Language: Rust
    // 
    "rust-analyzer.check.command": "clippy",
    "rust-analyzer.check.extraArgs": [
        "--",
        "-D",
        "warnings"
    ],
    "rust-analyzer.restartServerOnConfigChange": true,
    "rust-analyzer.showSyntaxTree": true,
    //
    // Cursor
    //
    "cursor.composer.shouldChimeAfterChatFinishes": true,
    "switch2idea.ideaPath": "/home/s373r/.local/bin/rustrover",
    "terminal.integrated.env.linux": {
        // https://github.com/getcursor/cursor/issues/549#issuecomment-2784455652
        "ARGV0": null,
    },
}