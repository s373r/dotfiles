#!/usr/bin/env bash

set -euo pipefail

if [[ -n "${DEBUG:-}" ]]; then
  set -x
fi

{{ if ne .chezmoi.os "linux" }}
{{     fail "Only Linux is supported at the moment!" }}
{{ end }}

# Install packages
{{ template "install-packages.tmpl" . }}

{{ if .setup_gnome }}
# Setup GNOME
{{     template "setup-gnome.tmpl" . }}
{{ end }}

{{ if .fix_touchpad_speed }}
# Fix touchpad speed
{{     template "fix-touchpad-speed.tmpl" . }}
{{ end }}

chsh -s $(which zsh)

zsh
